<Page x:Class="KursProjectDepartament.View.HumanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursProjectDepartament.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HumanPage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="EmployeeWrapPanel">
                
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="10" Width="200">
                    <StackPanel>
                        
                        <TextBlock x:Name="FIO" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        
                        <TextBlock x:Name="Position" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                        <TextBlock x:Name="Phone" Text="Телефон:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Children" Text="Количество Детей: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Marital_status" Text="Семейное положение:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="BirthDate" Text="Дата рождение: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Gender" Text="Пол: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Adress" Text="Адрес проживания: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="hire_date" Text="Дата найма: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Email" Text="Email: ivanov@example.com" FontSize="12" Margin="0,0,0,5"/>
                        
                        <Button Content="Редактировать" Width="100" Height="30" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
